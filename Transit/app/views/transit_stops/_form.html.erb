<%= form_with(model: transit_stop, local: true) do |form| %>
  <% if transit_stop.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(transit_stop.errors.count, "error") %> prohibited this transit_stop from being saved:</h2>

      <ul>
      <% transit_stop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="field col-6">
      <%= form.label :name %>
      <%= form.text_field :name, :class => 'form-control' %>
