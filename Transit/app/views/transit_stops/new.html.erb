

<div class="container py-5">
  <%= content_for :title, "New Transit Stop" %>

  <a href="<%= transit_stops_path %>"><i class="fas fa-chevron-left"></i> Back</a>

  <h1 class="mt-5">New Transit Stop</h1>

  <div class="d-flex">
    <div id="leaflet-map" class="mx-auto my-4"></div>
  </div>

  <%= render 'form', transit_stop: @transit_stop %>

      <script>
          var lat = 14.6538;
          var lng = 121.0685;

          $(".lat").val(lat);
          $(".lng").val(lng);


            var map = L.map('leaflet-map').setView([14.6538, 121.0685], 15);

            L.tileLayer('https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token={accessToken}', {
              attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, <a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, Imagery Â© <a href="https://www.mapbox.com/">Mapbox</a>',
              maxZoom: 18,
              minZoom: 4,
              id: 'mapbox.streets',
              accessToken: 'pk.eyJ1IjoieXNyYWVsMjE0IiwiYSI6ImNqdGZ2ZTRsejA4N2IzeXBqaXJ1OWZqb3EifQ.VGqjFFnSeNznPks0anqWcg'
          }).addTo(map);

            
          var marker = L.marker([14.6538, 121.0685]).addTo(map);

          function AdjustMapMarker(){
          	marker.setLatLng([lat,lng]); 
            map.setView([lat,lng]);
          }

          $(".lat").keydown(function(){
				lat = $(".lat").val();
				AdjustMapMarker();
			});

			$(".lng").keydown(function(){
				lng = $(".lng").val();
				AdjustMapMarker();
			});

			 $(".lat").change(function(){
				lat = $(".lat").val();
				AdjustMapMarker();
			});

			$(".lng").change(function(){
				lng = $(".lng").val();
				AdjustMapMarker();
			});

          function onMapClick(e) {
            
            lat = e.latlng.lat;
            lng = e.latlng.lng;

            $(".lat").val(lat);
            $(".lng").val(lng);

            AdjustMapMarker();
      		}

      		map.on('click', onMapClick);

		    

    </script>

</div>
