<%= content_for :title, @transit_line.name %>

<div class="container">

  <p id="notice"><%= notice %></p>

  <h1><%= @transit_line.name %></h1>

  <div class="p-3">
    <p>
      <strong>Status:</strong>
      <%= @transit_line.status %>
    </p>

    <p>
      <strong>Operating hours:</strong>
      <%= @transit_line.operating_hours %>
    </p>

    <p>
      <strong>Type:</strong>
      <%= @transit_line.kind %>
    </p>

    <p>
      <strong>Restrictions:</strong>
      <%= @transit_line.restrictions %>
    </p>

    <p>
      <strong>Reliability:</strong>
      <%= @transit_line.reliability %>
    </p>

    <p>
      <strong>Avg price:</strong>
      <%= @transit_line.avg_price %>
    </p>
  </div>

  <h4>List of Transit Stops Under <%= @transit_line.name %></h4>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>Status</th>
        <th>Longitude</th>
        <th>Latitude</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @transit_line.transit_stops.each do |transit_stop| %>
      <tr>
        <td><%= transit_stop.name %></td>
        <td><%= transit_stop.kind %></td>
        <td><%= transit_stop.status %></td>
        <td><%= transit_stop.longitude %></td>
        <td><%= transit_stop.latitude %></td>
        <td><%= link_to 'Show', transit_stop %></td>
        <td><%= link_to 'Edit', edit_transit_stop_path(transit_stop) %></td>
        <td><%= link_to 'Destroy', transit_stop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>



  <%= link_to 'Edit', edit_transit_line_path(@transit_line) %> |
  <%= link_to 'Back', transit_lines_path %>

</div>
