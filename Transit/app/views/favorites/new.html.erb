<% content_for :title, "Add New Favorite" %>
<div class="container">
	<h1>New Favorite</h1>

	<%= render 'form', favorite: @favorite %>
	<table class="table w-100">
	  <!--
        Displays the attributes that need to be filled up when creating a New Favorite Route Group
      -->
	  <th>Commuter ID</th>
	  <th>Commuter Name</th>
	  <!--
        The line of code after this checks if the commuter ID when creating a New Favorite Route Group exists
	  -->
	  <% @commuters.each do |commuter| %>
	  <tr>
	    <td><%= commuter.id %></td>
	    <td><%= commuter.name %></td>
	  </tr>
	  <% end %>
	</table>

	<%= link_to 'Back', favorites_path %>
</div>
