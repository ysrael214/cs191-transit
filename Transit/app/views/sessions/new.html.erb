<%= content_for :title, "Login" %>

<div class="container py-5 d-flex">

  <div class="m-auto py-5 w-50  ">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>">
        <i class="fas fa-exclamation-triangle"></i>
        <%= message %>
      </div>
    <% end %>

    <%= form_for :session, url: login_path, class: :form, method: :post do |form| %>
    <div class="field my-3">
      <%= form.label :email %>
      <%= form.text_field :email, :class => 'form-control' %>
    </div>

    <div class="field my-3">
      <%= form.label :password %>
      <%= form.password_field :password, :class => 'form-control', :autocomplete=>'off' %>
    </div>
    <div class="actions my-3">
      <div class="row">
        <div class="col-8">
          <%= button_tag(type: "submit", class: "btn btn-warning my-auto mb-lg-0 mx-auto mr-lg-0") do %>
            <i class="fas fa-sign-in-alt"></i> Login
          <% end %>
        </div>
        <div class="col-4 text-right">
          <%= link_to 'Sign Up', signup_path %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
